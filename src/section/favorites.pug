section.favorites
    .container
        .title
            h2 Favorites

        .bold Pick favorites of season

        .book
            .favorites__form
                form(method='GET' action='#' class="favorites__form-book")
                    .form__group-radio
                        input(type='radio',  id="winter" class="form__input-radio" name="season" checked)
                        label(for="winter" class="form__label-radio")
                            span.form__button-radio
                            | Winter
                    .favorites__group
                        input(type='radio',  id="spring" class="form__input-radio" name="season")
                        label(for="spring" class="form__label-radio")
                            span.form__button-radio
                            |Spring
                    .favorites__group
                        input(type='radio',  id="summer" class="form__input-radio" name="season")
                        label(for="summer" class="form__label-radio")
                            span.form__button-radio
                            |Summer
                    .favorites__group
                        input(type='radio',  id="autumn" class="form__input-radio" name="season")
                        label(for="autumn" class="form__label-radio")
                            span.form__button-radio
                            |Autumn
            .favorites__cards
                each item in book
                    .favorites__card
                        .favorites__card-wrapper
                            .favorites__card-staff !{item.top_text}
                            .favorites__card-name !{item.name}
                            .favorites__card-by !{item.by}
                            .favorites__card-description !{item.description}

                            if item.btn == 'active'
                                button.favorites__card-btn.active(type="submit") Own
                            else
                                button.favorites__card-btn(type="submit") Buy

                            .favorites__card-img
                                img(src=require('/img/favorites/'+ item.name_image +'.jpg'), class="im" id="i1" alt="photo")




